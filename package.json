    },
    "homepage": "https://github.com/kig/tabletree#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.17.0",
        "@typescript-eslint/parser": "^2.17.0",
        "husky": ">=4",
        "lint-staged": ">=10",
        "prettier": "1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
